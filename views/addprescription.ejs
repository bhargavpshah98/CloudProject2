<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <div>
            <div class="row mt-5">
            <div class="col-md-6 m-auto">
                <div class="card card-body">
                <h1 class="text-center mb-3">
                        <i class="far fa-calendar-plus"></i>
                </h1><form action="javascript:void(0)" method="POST">
                    <input type="hidden" name="user" value="user">
                    <table>
                    <tr>
                        <div class="input-field">
                            <label for="sName">Prescription Name</label>
                            <input
                                type="text"
                                id="sName"
                                name="sName"
                                class="form-control"
                                value=""
                            />
                        </div>
                        
                            <div class="input-field">
                                <label for="pEmail">Patient Email ID</label>
                                <input
                                    type="text"
                                    id="email"
                                    name="email"
                                    class="form-control"
                                    value="<%= email %>"
                                />
                            </div>
                           
                    </tr>
                    <tr>
                        <td>
                            <div class="input-field">
                                <label for="pName">Patient Name</label>
                                <input
                                    type="text"
                                    id="pName"
                                    name="pName"
                                    class="form-control"
                                    value=""
                                />
                            </div>
                        </td>
                        <td>
                        <div class="input-field">
                            <label for="tablet">Medicine Name</label>
                            <input
                                type="text"
                                id="tablet"
                                name="tablet"
                                class="form-control"
                                value=""
                            />
                        </div>
                        </td>            
                    </tr>
                    <tr>
                        <td><div class="input-field">
                            <input type="date" id="startDate" name="startDate" class="datepicker" 
                            value="" />
                            <label for="startDate">Start Date</label>
                            </div>
                        </td>
                        <td>
                            <div class="input-field">
                                <input type="date" id="endDate" name="endDate" class="datepicker"
                                value="" />
                                <label for="endDate">End Date</label>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="input-field">
                            <label for="morningCnt">Morning Medicine count</label>
                            <input
                                type="text"
                                id="morningCnt"
                                name="morningCnt"
                                class="form-control"
                                value=""
                            /> 
                        </td>
                        </div>
                        <td>
                            <div class="input-field">
                            <label for="middayCnt">Midday Medicine count</label>
                            <input
                                type="text"
                                id="middayCnt"
                                name="middayCnt"
                                class="form-control"
                                value=""
                            /> 
                            </div>
                        </td>
                        
                    </tr>
                    <tr>
                        <td>
                            <div class="input-field">                
                            <label for="eveningCnt">Evening Medicine count</label>
                            <input
                                type="text"
                                id="eveningCnt"
                                name="eveningCnt"
                                class="form-control"
                                value=""
                            /> 
                            </div>
                        </td>
                        <td>
                            <div class="input-field">                
                            <label for="bedtimeCnt">Bedtime Medicine count</label>
                            <input
                                type="text"
                                id="bedtimeCnt"
                                name="bedtimeCnt"
                                class="form-control"
                                value=""
                            /> 
                            </div>
                        </td>
                    </tr>
                </table>
                
                    <table>
                        <tr>
                            <td>
                                <button type="button" class="btn btn-primary" onclick="callApi()">Add Prescription</button></td>
                        </tr>
                    </table>
             
                </form>
                
                </div>
            </div>
        </div>
    </div>
    <script>
       
        
const Calender=document.querySelector('.datepicker');

M.Datepicker.init(Calender,{});
          
function callApi(){
  const prescription =  document.getElementById("sName").value
  const name=document.getElementById("pName").value
  const medicine=document.getElementById("tablet").value
  const sdate=document.getElementById("startDate").value;
  const edate=document.getElementById("endDate").value;
  const morning=document.getElementById("morningCnt").value;
  const midday=document.getElementById("middayCnt").value;
  const evening=document.getElementById("eveningCnt").value;
  const bedtime=document.getElementById("bedtimeCnt").value;
  const localdata=JSON.parse(localStorage.getItem("data"))
  const email=document.getElementById("email").value;
 
  const data={
      prescription,
      name,
      medicine,
      sdate,
      edate,
      morning,
      midday,
      evening,
      bedtime,
      email
}
const options={
    method:"POST",
    headers: {
    
    'Content-Type': 'application/json'
  },
    body:JSON.stringify(data)
  }

  if(!prescription || !name || !medicine || !sdate || !edate || !morning || !midday || !evening || !bedtime || !email){
      alert("Please enter all required fields");
  }
  else if(isNaN(morning) || isNaN(midday)|| isNaN(evening)|| isNaN(bedtime)){
    alert("Medicine count should be a numeric value");
  }
  else if(morning==0 && midday==0 && evening==0 && bedtime==0){
    alert("Dosage has not been added");
  }
  else{
    fetch("/prescriptionupload",options).then(res=>{
        console.log("Res-->",res)
        res.json().then(json=>{
            console.log("json",json)
            if(json.message=="Upload is successful!"){
                alert("Prescription successfully uploaded")
              // history.back()
               window.location=document.referrer
                
            }
            else{
                alert("Prescription uploaded failed")

            }

        }).catch(error=>{
            console.log("Error",error)
            alert("Prescription uploaded failed")
        })
    }).catch(err=>{
        console.log("Error",err)
    })
}
}   
    </script>
</body>
</html>